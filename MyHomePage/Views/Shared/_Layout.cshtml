<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/stylish-portfolio.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <!-- Navigation -->
    <a id="menu-toggle" href="#" class="btn btn-dark btn-lg toggle"><i class="fa fa-bars"></i></a>
    <nav id="sidebar-wrapper">
        <ul class="sidebar-nav">
            @*<a id="menu-close" href="#" class="btn btn-light btn-lg pull-right toggle"><i class="fa fa-times"></i></a>*@
            <li class="sidebar-brand">
                <a href="../Home/Index" onclick=$("#menu-close").click();>Matt Thoman</a>
            </li>
            <li>
                <a href="../Home/Index" onclick=$("#menu-close").click();>Home</a>
            </li>
            <li>
                <a href="../Home/About" onclick=$("#menu-close").click();>About</a>
            </li>
            <li>
                <a href="../Home/Skills" onclick=$("#menu-close").click();>Skills</a>
            </li>
            <li>
                <a href="../Home/Portfolio" onclick=$("#menu-close").click();>Portfolio</a>
            </li>
            <li>
                <a href="../Home/Contact" onclick=$("#menu-close").click();>Contact</a>
            </li>
        </ul>
    </nav>

    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - Matt Thoman</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/MyScripts.js"></script>
</body>
</html>