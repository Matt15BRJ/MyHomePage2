
@{
    ViewBag.Title = "Skills";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        width: 100%;
        height: 100%;
    }

    #skills {
        margin: 0;
        position: absolute;
        top: 46%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    #skills h1 {
        margin: 0;
        padding: 0;
        font-size: 4.5em;
        font-weight: 700;
        text-align: center;
    }

    #skills button {
        margin: 5px;
    }

    #skillboxes {
        margin: 0;
        position: relative;
    }

    #skillboxes .skill-item {
        text-align: center;
    }

    #skillboxes button {
        margin: 5px;
    }

</style>
 <!-- Skills -->
<!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
<section id="skills" class="skills">
    <h1>Skills</h1>
    <br/>
    <button type="button" class="btn btn-warning prog">Programming Skills</button>
    <button type="button" class="btn btn-warning prof">Professional Skills</button>
    <button type="button" class="btn btn-warning people">People Skills</button>
    <button type="button" class="btn btn-warning other">Other Skills</button>
</section>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/bootbox.min.js"></script>
<script>
    $(document).on("click", ".prog", function (e) {
        bootbox.alert({
            title: "Programming Skills",
            message: "<ul><li>HTML5</li><li>CSS3</li><li>JavaScript</li><li>Jquery</li><li>Knockout.js</li><li>SQL</li><li>C#</li><li>Python 2 & 3</li><li>ASP.NET & ASP.NET MVC</li></ul>",
            backdrop: true
        });
    });
    $(document).on("click", ".prof", function (e) {
        bootbox.alert({
            title: "Professional Skills",
            message: "<ul><li>Police Officer for almost 12 years</li><li>Conflict Resolution</li><li>Communication</li><li>Public Speaking</li><li>Leadership</li><li>Investigation</li><li>Web Development</li><li>Crisis Intervention</li><li>Database</li></ul>",
            backdrop: true
        });
    });
    $(document).on("click", ".people", function (e) {
        bootbox.alert({
            title: "People Skills",
            message: "<ul><li>Friendly</li><li>Personable</li><li>Well Spoken</li><li>Respectable</li><li>Responsible</li><li>Caring</li><li>Integrity</li></ul>",
            backdrop: true
        });
    });
    $(document).on("click", ".other", function (e) {
        bootbox.alert({
            title: "Other Skills",
            message: "<ul><li>Under Construction</li></ul>",
            backdrop: true
        });
    });
</script>

